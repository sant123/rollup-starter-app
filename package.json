{
  "name": "rollup-starter-app",
  "version": "1.0.0",
  "main": "rollup.config.cjs",
  "repository": "https://github.com/sant123/rollup-starter-app",
  "author": "Santiago Aguilar Hern√°ndez <santiago.aguilar.821@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"yarn:start:server\" \"yarn:watch:css\" \"yarn:watch:js\" -n \"Server,Sass,Rollup\" -c \"green,blue,red,white\"",
    "start:server": "serve -l 2626 public",
    "build": "yarn build:css && yarn build:js",
    "build:css": "gulp sass",
    "watch:css": "gulp sassWatch",
    "build:js": "rollup -c",
    "watch:js": "rollup -cw",
    "check:ts": "tsc --noEmit",
    "clean": "rimraf public/dist"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@rollup/plugin-typescript": "^6.0.0",
    "concurrently": "^5.3.0",
    "fs-extra": "^9.0.1",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-if": "^3.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^2.6.5",
    "node-sass": "^4.14.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.28.2",
    "rollup-plugin-terser": "^7.0.1",
    "serve": "^11.3.2",
    "tslib": "^2.0.1",
    "typescript": "^4.0.3"
  }
}
